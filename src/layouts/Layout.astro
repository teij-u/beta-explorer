---
//このファイルは、サイト全体のレイアウトを定義します。
import ThemeToggleButton from '../components/ThemeToggleButton.astro';
const { title } = Astro.props;
---
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css">
  </head>
  <body class="bg-white dark:bg-zinc-900 transition-colors duration-300">
    <header class="sticky top-0 z-50 bg-white/80 dark:bg-zinc-900/80 backdrop-blur-md shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          {/* ヘッダー左側 */}
          <div class="flex-shrink-0">
            {/* ★★★ 文字色にダークモード用のクラスを追加 ★★★ */}
            <a href="/" class="text-2xl font-bold text-gray-900 dark:text-white hover:text-blue-700 dark:hover:text-blue-400 transition-colors">
              β-Explorer
            </a>
          </div>
          {/* ヘッダー右側 */}
          <div class="hidden md:flex items-center space-x-6">
            <nav class="flex space-x-6">
              {/* ★★★ 文字色にダークモード用のクラスを追加 ★★★ */}
              <a href="/about/" class="text-gray-700 dark:text-zinc-300 hover:text-blue-700 dark:hover:text-blue-400 transition-colors">
                このサイトについて
              </a>
              <a href="/contact/" class="text-gray-700 dark:text-zinc-300 hover:text-blue-700 dark:hover:text-blue-400 transition-colors">
                お問い合わせ
              </a>
            </nav>
            {/* ★★★ ここに切り替えボタンを設置 ★★★ */}
            <ThemeToggleButton />
          </div>
        </div>
      </div>
    </header>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <main>
        <slot />
      </main>
      
      <footer class="text-center py-8 mt-12 text-gray-500 dark:text-zinc-400">
        <p>&copy; 2025 β-Explorer</p>
      </footer>
    </div>
  </body>
</html>